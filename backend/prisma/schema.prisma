generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Animal {
  id                         Int                          @id @default(autoincrement())
  nombre                     String
  edad                       Int
  raza                       String
  tipo                       String
  imagenUrl                  String                       @default("https://bowwowblogger.wordpress.com/wp-content/uploads/2012/12/dog-question-mark-curious.gif")
  sexo                       String
  animal_adoptados           animal_adoptados[]
  animal_en_refugio_transito animal_en_refugio_transito[]
}

model Adoptante {
  id               Int                @id @default(autoincrement())
  nombre           String
  apellido         String
  edad             Int
  direccion        String
  email            String             @unique
  telefono         Int                @unique
  animal_adoptados animal_adoptados[]
}

model refugio_transito {
  id                         Int                          @id @default(autoincrement())
  nombre                     String                       @unique
  direccion                  String
  capacidad_maxima           Int
  telefono                   Int                          @unique
  tipo                       String
  animal_en_refugio_transito animal_en_refugio_transito[]
}

model animal_en_refugio_transito {
  id               Int              @id @default(autoincrement())
  refugio_id       Int
  animal_id        Int
  animales         Animal           @relation(fields: [animal_id], references: [id])
  refugio_transito refugio_transito @relation(fields: [refugio_id], references: [id])
}

model animal_adoptados {
  id           Int       @id @default(autoincrement())
  adoptante_id Int
  animal_id    Int
  adoptante    Adoptante @relation(fields: [adoptante_id], references: [id])
  animales     Animal    @relation(fields: [animal_id], references: [id])
}

model preadop {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  date     DateTime
  telefono String   @unique
  mascota  String
  pregunta String
}
